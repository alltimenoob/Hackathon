<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemImageView"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:padding="4dp"
        android:src="@drawable/home_menu_icon"
        />

    <TextView
    android:id="@+id/itemNameTextView"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/itemImageView"

    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"

    android:text="Karan Raj"
    style="@style/normal_text"/>

    <TextView
        android:id="@+id/itemEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        android:layout_toRightOf="@id/itemImageView"
        android:layout_below="@id/itemNameTextView"

        android:text="rajkaran5478@gmail.com"
        style="@style/normal_text"/>

</RelativeLayout>